<Application x:Class="deknote.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:deknote"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- นีคือปุ่มสีดำของข้า -->
        <Style x:Key="cakebutton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" Background="{TemplateBinding Background}" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="PromptMediumFontFamily">/deknote;component/font/Prompt-Medium.ttf#Prompt Medium</FontFamily>



    </Application.Resources>
</Application>
