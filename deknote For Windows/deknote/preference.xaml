<Window x:Class="deknote.preference"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:deknote"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Preference" Height="450" Width="600">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Width="200" Fill="#FFFBFBFB" Stroke="#FFF1F1F1">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="12" Direction="144"/>
            </Rectangle.Effect>
        </Rectangle>
        <ListBox x:Name="preference_list" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Width="200" Margin="0,47,0,0" BorderBrush="{x:Null}"/>
        <TextBlock Margin="10,10,412,0" TextWrapping="Wrap" Text="Preference" FontFamily="{DynamicResource PromptMediumFontFamily}" FontSize="20" Height="37" VerticalAlignment="Top"/>

    </Grid>
</Window>
